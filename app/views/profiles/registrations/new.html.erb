<main class="form-signup">
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

    <div class="form-floating">
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: "example@mail.com"%>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.phone_field :phone_number, class: 'form-control', autofocus: true, autocomplete: "phone", placeholder: "0999999999" %>
      <%= f.label :phone_number %>
    </div>

    <div class="form-floating">
      <%= f.text_field :first_name, class: 'form-control', value: resource.user.nil? ? '' : resource.user.first_name, autofocus: true, autocomplete: "given-name", placeholder: 'First name' %>
      <%= f.label :first_name %>
    </div>

    <div class="form-floating">
      <%= f.text_field :last_name, class: 'form-control', value: resource.user.nil? ? '' : resource.user.last_name, autofocus: true, autocomplete: "family-name", placeholder: 'Family name'%>
      <%= f.label :last_name %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "New password" %>
      <%= f.label :password %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "Password confirmation" %>
      <%= f.label :password_confirmation %><br />
    </div>

    <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
